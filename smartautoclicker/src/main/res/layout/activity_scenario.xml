<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.请开启所有申请的权限"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.请开启gpt应用程序，并打开文字聊天页面"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.请关闭gpt的软键盘"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.请打开悬浮功能"
            android:textSize="16sp" />

    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment"
        android:name="com.buzbuz.smartautoclicker.activity.list.ScenarioListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="ScenarioList"
        tools:layout="@layout/fragment_scenarios" />

</LinearLayout>


